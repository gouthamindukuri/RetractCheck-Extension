---
const firefoxUrl = 'https://addons.mozilla.org/en-US/firefox/addon/retractcheck/';
---

<div class="space-y-4">
  <a
    href={firefoxUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="inline-flex items-center gap-3 px-5 py-2.5 bg-text text-bg font-medium text-sm hover:bg-text-muted transition-colors"
  >
    <img src="/firefox.svg" alt="Firefox" class="w-5 h-5" />
    Install for Firefox
  </a>

  <div class="flex items-center gap-6 text-sm text-text-muted">
    <span class="flex items-center gap-2 opacity-50">
      <img src="/chrome.svg" alt="Chrome" class="w-4 h-4" />
      Chrome · coming soon
    </span>
    <span class="flex items-center gap-2 opacity-50">
      <img src="/edge.svg" alt="Edge" class="w-4 h-4" />
      Edge · coming soon
    </span>
  </div>
</div>
