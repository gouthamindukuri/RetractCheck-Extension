{
  "manifest_version": 3,
  "name": "RetractCheck",
  "version": "0.2.0",
  "description": "Extracts the DOI from article pages and checks against the Retraction Watch database.",
  "homepage_url": "https://github.com/gouthamindukuri/RetractCheck-Extension",
  "action": {
    "default_title": "RetractCheck",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "retractcheck@addons.mozilla.org",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
