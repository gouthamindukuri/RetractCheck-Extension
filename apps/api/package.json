{
  "name": "@retractcheck/worker",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --local",
    "build": "[ -f wrangler.toml ] && wrangler deploy --dry-run || echo 'Skipping build: wrangler.toml not found (copy wrangler.example.toml and configure)'",
    "deploy": "wrangler deploy",
    "deploy:dry-run": "wrangler deploy --dry-run",
    "lint": "eslint src",
    "format": "prettier -w src",
    "clean": "rm -rf dist",
    "test": "vitest run --config vitest.config.ts"
  },
  "dependencies": {
    "@retractcheck/doi": "workspace:*",
    "@retractcheck/types": "workspace:*",
    "csv-parse": "^6.1.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250927.0",
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.4.0",
    "happy-dom": "^18.0.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.40.2"
  }
}
